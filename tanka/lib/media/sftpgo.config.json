{
  "$schema": "./sftpgo.config.schema.json",
  "data_provider": {
    "driver": "postgresql",
    "name": "sftpgo",
    "host": "postgres.databases.svc.cluster.local",
    "port": 5432,
    "username": "sftpgo",
    "check_password_hook": "http://satph.auth.svc.cluster.local:3000/auth"
  },
  "httpd": {
    "bindings": [
      {
        "port": 8080,
        "enabled_login_methods": 3,
        "render_openapi": false,
        "oidc": {
          "config_url": "https://auth.danielramos.me",
          "redirect_base_url": "https://cloud.danielramos.me",
          "username_field": "username",
          "scopes": [
            "openid",
            "profile",
            "email",
            "sftpgo"
          ],
          "role_field": "sftpgo_role",
          "debug": true
        }
      }
    ]
  },
  "webdavd": {
    "bindings": [
      {
        "port": 8081,
        "prefix": "/webdav"
      }
    ]
  }
}
