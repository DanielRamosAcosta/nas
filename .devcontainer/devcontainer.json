{
  "name": "NAS Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "tamasfe.even-better-toml",
        "jnoortheen.nix-ide",
        "grafana.vscode-jsonnet"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/postCreateCommand.sh",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=/Users/danielramos/.ssh,target=/home/vscode/.hostssh,type=bind",
    "source=/Users/danielramos/.secrets/kubeconfig-k3s.yaml,target=/home/vscode/.kube/config,type=bind"
  ]
}
