{
  "name": "NAS Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "tamasfe.even-better-toml",
        "jnoortheen.nix-ide",
        "grafana.vscode-jsonnet"
      ]
    }
  },
  "postCreateCommand": "nix develop --impure --accept-flake-config --command true",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=/Users/danielramos/.ssh/id_mac,target=/home/vscode/.ssh/id_ed25519,type=bind",
    "source=/Users/danielramos/.ssh/id_mac.pub,target=/home/vscode/.ssh/id_ed25519.pub,type=bind",
    "source=/Users/danielramos/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind",
    "source=/Users/danielramos/.secrets/kubeconfig-k3s.yaml,target=/home/vscode/.kube/config,type=bind"
  ]
}
